# ============================================
# DATABASE CONFIGURATION
# ============================================

# PostgreSQL (RAG + AI Schema)
POSTGRES_DB=cogep_assist_db
POSTGRES_USER=cogep_user
POSTGRES_PASSWORD=sua_senha_segura_aqui
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://cogep_user:sua_senha_segura_aqui@postgres_db:5432/cogep_assist_db

# TimescaleDB (Séries Temporais - OHLCV)
TIMESCALE_DB=trading_data
TIMESCALE_USER=trading_user
TIMESCALE_PASSWORD=trading_password_segura
TIMESCALE_PORT=5433

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# ============================================
# LLM CONFIGURATION
# ============================================

# OpenAI (Primário - para embeddings e fallback)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Ollama (Secundário - Qwen 14B local)
OLLAMA_API_BASE_URL=http://seu-servidor-local:11434/v1
OLLAMA_CHAT_MODEL_NAME=qwen2.5-coder:14b-instruct-q4_K_M

# ============================================
# TRADING BOT CONFIGURATION
# ============================================

# Símbolos para trading (separados por vírgula)
TRADING_SYMBOLS=EUR/USD,GBP/USD,USD/JPY

# Exchange Configuration
EXCHANGE_TYPE=alpaca  # alpaca ou oanda
PAPER_TRADING=true    # true para paper trading, false para live trading

# ============================================
# EXCHANGE API KEYS
# ============================================

# Alpaca (https://alpaca.markets)
# IMPORTANTE: Use Paper Trading Keys primeiro!
EXCHANGE_API_KEY=your-alpaca-api-key-here
EXCHANGE_API_SECRET=your-alpaca-secret-key-here
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # Paper trading
# ALPACA_BASE_URL=https://api.alpaca.markets      # Live trading (CUIDADO!)

# OANDA (https://oanda.com)
# OANDA_API_KEY=your-oanda-api-key-here
# OANDA_ACCOUNT_ID=your-oanda-account-id
# OANDA_BASE_URL=https://api-fxpractice.oanda.com  # Practice
# OANDA_BASE_URL=https://api-fxtrade.oanda.com     # Live (CUIDADO!)

# ============================================
# TECHNICAL INDICATORS CONFIGURATION
# ============================================

# RSI (Relative Strength Index)
RSI_PERIOD=14

# MACD (Moving Average Convergence Divergence)
MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9

# Bollinger Bands
BOLLINGER_PERIOD=20
BOLLINGER_STD=2

# ============================================
# DECISION ENGINE CONFIGURATION
# ============================================

# Arquivo de regras de decisão
DECISION_RULES_FILE=trading_services/decision_engine_service/decision_trees.json

# Tamanho de posição (% do capital por trade)
POSITION_SIZE_PCT=0.01  # 1% do capital

# Stop Loss e Take Profit (% do preço de entrada)
STOP_LOSS_PCT=0.02     # 2%
TAKE_PROFIT_PCT=0.04   # 4%

# ============================================
# NEWS & SENTIMENT SOURCES
# ============================================

# ForexFactory RSS
FOREXFACTORY_RSS_URL=https://www.forexfactory.com/rss

# DailyFX
DAILYFX_RSS_URL=https://www.dailyfx.com/feeds/market-news

# Intervalo de atualização de sentimento (segundos)
SENTIMENT_UPDATE_INTERVAL=300  # 5 minutos

# ============================================
# MONITORING & LOGGING
# ============================================

# Log Level
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Telegram Alerts (opcional)
# TELEGRAM_BOT_TOKEN=your-telegram-bot-token
# TELEGRAM_CHAT_ID=your-telegram-chat-id

# ============================================
# LEGACY (Cogep_assist - manter para RAG)
# ============================================

# Unstructured API (para parsing de documentos)
UNSTRUCTURED_API_URL=https://api.unstructured.io

# EvoAPI (não usado no Trading Bot, mas mantido para compatibilidade)
# EVOAPI_WEBHOOK_URL=https://your-evoapi-webhook-url
